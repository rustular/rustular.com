---
import { Image } from 'astro:assets';
import { ViewTransitions } from 'astro:transitions';

import rustularLogo from '../assets/rustular.png';

interface Props {
  title: string;
}

const { title } = Astro.props;
const { pathname } = Astro.url;

const pathnameWithSlash = pathname.endsWith('/') ? pathname : `${pathname}/`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/ico" href="/favicon.ico?v=1" />
    <link rel="canonical" href=`https://rustular.com${pathnameWithSlash}`/>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content="Rustular 0.0.0" />
    <meta name="darkreader-lock">
    <title>{title} - Rustular</title>
    <script
      defer
      data-domain="rustular.com"
      src="https://ingest.tokia.dev/js/script.js"
    ></script>
    <ViewTransitions />
  </head>
  <body class="bg-slate-950 font-sans text-white">
    <header class="flex items-center mb-16 h-16 border-b border-slate-700" transition:name="header" >
      <a href="/" class="ml-2 flex items-center">
      <Image
        class="w-10"
        src={rustularLogo}
        alt="Rustular Logo"
        width={128}
        height={128}
      />
      <div class="pl-2 font-mono text-3xl font-bold"
        >Rustular</div
      >
    </a>
    </header>
    <div
      class="max-w-3xl mx-auto px-6"
    >
      <slot />
    </div>
  </body>
</html>
